<form action='/{{game.id}}?_method=PUT', method='POST'>
    <h2>Edit Game</h2>
    <div>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="{{game.title}}">
    </div>
    <div>
        <label for="year">Year Released</label>
        <input type="number" max=2019 name="year" id="year" value="{{game.year}}">
    </div>
    <div>
        <label for="company">Company</label>
        <input type="text" name="company" id="company" value="{{game.company}}">
    </div>
    <div>
        <label for="imgLink">Logo</label>
        <input type="text" name="imgLink" id="imgLink" value="{{game.imgLink}}">
    </div>
    <input type="submit" value="submit">
</form>