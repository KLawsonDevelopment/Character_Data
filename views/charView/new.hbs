<form action='/game/{{game.id}}/character', method="POST">
    <h2>New Character</h2>
    <div>
        <label for="name">Name</label>
        <input type="text" name="name" id="name">
    </div>
    <div>
        <label for="age">Age</label>
        <input type="number" max=2019 name="age" id="age">
    </div>
    <div>
        <label for="gender">Gender</label>
        <input type="text" name="gender" id="gender">
    </div>
    <div>
        <label for="game">Game</label>
        <input type="text" name="game" id="game">
    </div>
    <div>
        <label for="history">History</label>
        <input type="text" name="history" id="history">
    </div>
    <div>
        <label for="charLink">Character Picture</label>
        <input type="text" name="charLink" id="charLink">
    </div>
    <input type="submit" value="submit" class="newCharSubmit">
</form>