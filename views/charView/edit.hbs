
<div>{{char}}</div>

<form action='/game/{{game.id}}/character/{{char.id}}?_method=PUT', method="POST">
    <h2>Edit</h2>
    <div>
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="{{char.name}}">
    </div>
    <div>
        <label for="age">Age</label>
        <input type="number" max=2019 name="age" id="age" value="{{char.age}}">
    </div>
    <div>
        <label for="gender">Gender</label>
        <input type="text" name="gender" id="gender" value="{{char.gender}}">
    </div>
    <div>
        <label for="history">History</label>
        <input type="text" name="history" id="history" value="{{char.history}}">
    </div>
    <div>
        <label for="charLink">Character Picture</label>
        <input type="text" name="charLink" id="charLink" value="{{char.charLink}}">
    </div>
    <input type="submit" value="submit">
</form>