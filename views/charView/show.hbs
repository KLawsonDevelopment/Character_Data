<a href="/game/{{gameId}}/character/{{chara.id}}/edit">Edit This Character</a>
<form class="delete-form" action="/game/{{gameId}}/character/{{chara.id}}?_method=DELETE" method="POST">
    <input class="btn" type="submit" value="DELETE">
</form>
<img src="{{chara.charLink}}" alt="character image">
<p>{{chara.name}}</p>
<p>{{chara.age}}</p>
<p>{{chara.game}}</p>
<p>{{chara.gender}}</p>
<p>{{chara.history}}</p>
{{#each chara.comments}}
<p>{{user}}</p>
<p>{{date}}</p>
<p>{{comment}}</p>
{{/each}}